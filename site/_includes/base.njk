<!doctype html>
<html
  lang="en"
  dir="ltr"
  {% if itemtype %}itemscope{% endif %}
  {% if itemtype %}itemtype="http://schema.org/{{ itemtype }}"{% endif %}>
  <head>
    <meta
      name="viewport"
      content="width=device-width,initial-scale=1"
    />
    <link
      rel="stylesheet"
      href="site/style.scss"
    />
    <title>
      {{ title }}
    </title>
  </head>
  <body>
    {{ content | safe }}
  </body>
</html>
